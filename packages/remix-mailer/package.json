{
  "name": "remix-mailer",
  "version": "0.0.1",
  "main": "./build/index.cjs.js",
  "module": "./build/index.esm.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/index.cjs.js",
      "import": "./build/index.esm.js"
    },
    "./index.css": "./build/index.css"
  },
  "sideEffects": false,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build:css": "tailwindcss -i ./src/client/index.css -o ./build/index.css",
    "build:ts": "tsup",
    "dev:css": "npm run build:css -- --watch",
    "dev:ts": "npm run build:ts -- --watch",
    "dev": "run-p dev:*",
    "build": "run-s build:*",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint --ext .ts,.tsx src/",
    "test": "jest --config=config/jest.config.ts --passWithNoTests",
    "format": "prettier --write \"src/**/*.tsx\" \"src/**/*.ts\" \"test/**/*.test.tsx\" \"config/**/*.ts\"",
    "coverage": "npm run test -- --coverage"
  },
  "keywords": [
    "remix",
    "remix-mailer",
    "email",
    "templating"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@remix-run/react": "^1.0.0 || ^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@types/debug": "^4.1.9",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.37",
    "@remix-run/react": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "tsconfig": "*",
    "tsup-config": "*"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@types/react-dom": "^18.2.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
