{
  "extends": "tsconfig/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "paths": {
      "@gregermendle/react-mailer/*": ["../react-mailer/build/*"]
    }
  },
  "include": [
    "src/ui/**/*.ts",
    "src/ui/**/*.tsx",
    "src/server/**/*.ts",
    "src/server/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
