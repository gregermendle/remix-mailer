{
  "extends": "tsconfig/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "paths": {
      "next/*": ["../../node_modules/next/*"],
      "react-mailer/*": ["../react-mailer/build/*"]
    }
  },
  "include": [
    "src/ui/**/*.ts",
    "src/ui/**/*.tsx",
    "src/server/**/*.ts",
    "src/server/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
